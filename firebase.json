{
  "hosting": {
    "public": "dist/public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "redirects": [
      {
        "source": "/books",
        "destination": "/gishohaku1/books",
        "type": 301
      },
      {
        "source": "/circles",
        "destination": "/gishohaku1/circles",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "/:eventId/circles/:id/edit",
        "destination": "/gishohaku1/circles/[id]/edit.html"
      },
      {
        "source": "/gishohaku1/books/**/submit",
        "destination": "/gishohaku1/books/[id]/submit.html"
      }
    ],
    "headers": [
      {
        "source": "/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      },
      {
        "source": "/_next/static/**/*",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          }
        ]
      },
      {
        "source": "_next/static/images/*",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=86400"
          }
        ]
      },
      {
        "source": "/gishohaku1/books",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=600"
          }
        ]
      },
      {
        "source": "/gishohaku1/circles",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=600"
          }
        ]
      }
    ],
    "trailingSlash": false,
    "cleanUrls": true
  },
  "functions": {
    "source": "dist/functions"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
